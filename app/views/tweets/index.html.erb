<div class="container">

  <div class= "row">
    <div class="col-4">
            <div class="card" style="width: 100%;">
      <div class="card-body">
        <img class="card-image-top" src="..." alt="card image cap">
        <h5 class="card-title"><%= current_user.name %></h5>
        <p> <%= current_user.email %> </p>
        <%= link_to 'Ver Perfil', edit_user_registration_path , class:"btn btn-primary"%>

      </div>
      </div>
    </div>
    <div class="col-8">
     <ul class="list-group">
      <center>
          <%= link_to 'New Tweet', new_tweet_path , class:"btn btn-primary"%>
      </center>
   
      <% @tweets.order(id: :desc).each do |tweet| %>
       
        <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <h5 class="list-group-heading"><%= tweet.user.email %> </h5>
             <br> <%= tweet.conteudo %>
             <br> <%= tweet.created_at.strftime("%d/%m/%Y - %H:%M") %> 
        <%end%>
      <% end %>
    </ul>
        </div>
      </div>
    </div>
  </div>
 
  <br>
</div>